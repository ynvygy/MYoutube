<div id="video_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1>Videos Dashboard</h1>
    </div>
  </div>

  <div id="links">
    <div class="wrapper-skinny">
      <ul>
        <li><%= link_to "Videos", root_path %></li>
        <li><%= link_to "New Video", new_video_path, class: "current" %></li>
        <li><%=link_to "Account Settings", edit_user_registration_path %></li>
        <li><%=link_to "View Video", video_path(current_user)%></li>
      </ul>
    </div>
  </div>
</div>

<div id="videos">
  <div class="wrapper_skinny">
    <ul class="cf">
      <% @videos.each do |video| %>
        <li class="cf">
          <div class="video_thumbnail">
            <a href="video.html">
              <img src="images/video1.jpg" alt="Video1">
            </a>
          </div>
          <div class="video_overview">
            <h2><%= link_to video.title, video_path(@video)%></h2>
            <p class="description"><%= truncate(video.description, length: 100)%></p>
            <div class="authorized_links">
              <%= link_to "Edit", edit_video_path(@video) %>
              <%= link_to "Edit", edit_video_path(@video), method: :delete, data: {confirm: "Are you sure ?"} %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
<div class="pagination">
  <span class="previous_page disabled">Previous</span>
  <em class="current">1</em>
  <a href="#">2</a>
  <a class="next_page" href="#">Next</a>
</div>