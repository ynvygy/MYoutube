<%= form_for(@evideo) do |f| %>
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>

	<br>
	<br>

	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</div>

	<br>
	<br>

	<div class="field">
		<%= f.label :thumbnail %><br>
		<%= f.file_field :thumbnail %>
	</div>

	<div class="field">
		<%= f.label :video %><br>
		<%= f.file_field :video %>
	</div>

	<%= f.submit class= "button button_highlight button_block" %>
<% end %>